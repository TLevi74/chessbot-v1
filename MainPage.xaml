            <ImageButton x:Name="SquareE1" BackgroundColor="#769656" Grid.Row="9" Grid.Column="6" VerticalOptions="Fill" HorizontalOptions="Fill" CornerRadius="0" Clicked="SquareSelected"></ImageButton>
